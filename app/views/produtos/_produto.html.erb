<tr>
  <td><%= produto.nome %></td>
  <td><%= produto.descricao %></td>
  <td><%=  if produto.departamento.blank?
            puts "Sem Departamento!"       
          else
            produto.departamento.nome
          end  %>
  <td><%= produto.preco %></td>
  <td><%= produto.quantidade %></td>
  <td><%= link_to "Alterar", edit_produto_path(produto), class: "btn btn-default" %>
  <td><%= button_to "Remover", produto, method: :delete, class: "btn btn-danger",
  data: {confirm: "Tem certeza que deseja remover o produto #{produto.nome}?"} %></td>
</tr>