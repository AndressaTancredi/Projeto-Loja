<html>
  <body>
    <table>
      <thead>
        <tr>
          <td>Nome</td>
          <td>Desrição</td>
          <td>Preço</td>
          <td>Quantidade</td>
        </tr>
      </thead>
      <tbody>
      <% @produtos.each do |produto| %>
        <tr>
          <td><%= produto.nome %></td>
          <td><%= produto.descricao %></td>
          <td><%= produto.preco %></td>
          <td><%= produto.quantidade %></td>
        </tr>
        <% end %> 
      </tbody>
      </table>
      <table>
      <h3>Produto com Desconto</h3>
      <thead>
        <tr>
          <td>Nome</td>
          <td>Desrição</td>
          <td>Preço</td>
          <td>Quantidade</td>
        </tr>
      </thead>
      <tbody>
      <% @produto_com_desconto.each do |produto| %>
        <tr>
          <td><%= produto.nome %></td>
          <td><%= produto.descricao %></td>
          <td><%= produto.preco %></td>
          <td><%= produto.quantidade %></td>
        </tr>
        <% end %> 
      </tbody>
    </table>
  </body>
</html>